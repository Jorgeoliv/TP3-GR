extends layout
block content
  h1 Troca de Pacotes SNMP
  
  .w3-container
    .w3-card-4
      if(info[0] != undefined)
        h3 Último Troca de Pacotes SNMP foi realizada a:
          .w3-container 
            h4(id="dia" name=info[0].dia) Dia => 
              = info[0].dia
            h4(id="hora" name=info[0].hora) Hora =>
              = info[0].hora
      else
        h3 Último Troca de Pacotes SNMP foi realizada a:
          .w3-container 
            h4(id="dia" name="")
            h4(id="hora" name="")

      table.w3-table-all(id="tabelaPrincipal")
        tr
          th Dia
          th Hora
          th IP
          th Porta
          th ID
          th Operação
          th Community String
          th 
        each troca in info
          tr
            td= troca.dia
            td= troca.hora
            td= troca.ip
            td= troca.port
            td= troca.pedido.id
            td= troca.pedido.operation
            td= troca.pedido.communityString
            td
              -var url = "http://localhost:3000/exchangeIndividual?id=" + troca.pedido.id
              button.w3-button.w3-round.large-w3-teal(onclick="location.href ='" + url + "'" ) Analisar!
